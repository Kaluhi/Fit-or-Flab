<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation ="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaluhi.fitorflab.MainActivity">

    <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height= "match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#307bde"
        android:id="@+id/weightbtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/weight"
            android:id="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:paddingRight="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp" />

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="33dp"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:paddingRight="5dp"
            android:textColor="#FFFF" />

        <TextView
            android:text="Weight Lifting "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignStart="@+id/imageView"
            android:textColor="#FFFF"
            />

        <TextView
            android:text=" 10 Sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginTop="17dp"
            android:id="@+id/textView4"
            android:gravity="right"
            android:textSize="20dp"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:textColor="#FFFF" />

        <TextView
            android:text="Do you even lift?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:textColor="#FFFF"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height= "match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:id="@+id/yogabtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/lotus"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:paddingRight="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp" />

        <TextView
            android:text="12%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="33dp"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:paddingRight="5dp"
            android:textColor="#FFFF"/>

        <TextView
            android:text="Yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignStart="@+id/imageView"
            android:textColor="#FFFF"/>

        <TextView
            android:text="Namaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:textColor="#FFFF"/>

        <TextView
            android:text="1 Hour "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:gravity="right"
            android:textSize="20dp"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignStart="@+id/textView"
            android:textColor="#FFFF"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height= "match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:id="@+id/cardiobtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/cardiogram"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:paddingRight="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="25dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp" />

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="33dp"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:paddingRight="5dp"
            android:textColor="#FFFF"/>

        <TextView
            android:text="Cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignStart="@+id/imageView"
            android:textColor="#FFFF"/>

        <TextView
            android:text="run like crazy "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:textColor="#FFFF"/>

        <TextView
            android:text="5 Miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:id="@+id/textView4"
            android:gravity="right"
            android:textSize="20dp"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView"
            android:textColor="#FFFF"/>


    </RelativeLayout>


</LinearLayout>
